<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_scaffold.xml"
    app:startDestination="@id/ListaFragment">

    <fragment
        android:id="@+id/scaffoldFragment"
        android:name="com.example.scaffold.fragment.ScaffoldFragment"
        android:label="ScaffoldFragment">
        <action
            android:id="@+id/action_to_favoritosFragment"
            app:destination="@id/FavoritosFragment" />
        <action
            android:id="@+id/action_to_listaFragment"
            app:destination="@id/ListaFragment" />
        <action
            android:id="@+id/action_to_contactoFragment"
            app:destination="@id/ContactoFragment" />
    </fragment>

    <fragment
        android:id="@+id/ListaFragment"
        android:name="com.example.scaffold.fragment.ListaFragment"
        android:label="Lista Fragment"
        tools:layout="@layout/fragment_lista" >
    </fragment>

    <fragment
        android:id="@+id/FavoritosFragment"
        android:name="com.example.scaffold.fragment.FavoritosFragment"
        android:label="Favoritos Fragment"
        tools:layout="@layout/fragment_favoritos" >
    </fragment>

    <fragment
        android:id="@+id/ContactoFragment"
        android:name="com.example.scaffold.fragment.ContactoFragment"
        android:label="Contacto Fragment"
        tools:layout="@layout/fragment_contacto" >
    </fragment>


</navigation>